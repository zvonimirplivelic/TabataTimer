<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpTimerFragment">

    <ImageView
        android:id="@+id/iv_set_count"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/iv_set_count_description"
        android:src="@drawable/ic_set_count"
        app:layout_constraintBottom_toBottomOf="@+id/iv_subtract_set"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_set_count"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_set_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/tv_set_count_text"
        app:layout_constraintLeft_toRightOf="@id/iv_set_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_subtract_set"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_subtract"
        app:layout_constraintLeft_toRightOf="@id/iv_set_count"
        app:layout_constraintRight_toLeftOf="@id/et_set_count"
        app:layout_constraintStart_toStartOf="@+id/tv_set_count"
        app:layout_constraintTop_toBottomOf="@id/tv_set_count" />

    <EditText
        android:id="@+id/et_set_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:hint="1"
        android:inputType="number"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/iv_subtract_set"
        app:layout_constraintLeft_toRightOf="@id/iv_subtract_set"
        app:layout_constraintRight_toLeftOf="@id/iv_add_set"
        app:layout_constraintTop_toTopOf="@+id/iv_subtract_set" />

    <ImageView
        android:id="@+id/iv_add_set"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="@+id/tv_set_count"
        app:layout_constraintLeft_toRightOf="@id/et_set_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_set_count" />

    <View
        android:id="@+id/set_exercise_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_set_count"
        />

</androidx.constraintlayout.widget.ConstraintLayout>